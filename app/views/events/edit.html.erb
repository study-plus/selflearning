<%= form_with(model: [@user,@event], url: user_event_path(@event.user_id,@event.id),local: true) do |form| %>

    <div class="title">
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>

    <div class="time">
        <%= form.label :start %>
        <%= form.datetime_select :start %>
        <%= form.label :end %>
        <%= form.datetime_select :end %>
    </div>

    <div class="content">
        <%= form.label :content %>
        <%= form.text_field :content %>
    </div>


    <div class="submit">
        <%= form.submit %>
    </div>

<% end %>